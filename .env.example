# 토지 AI 시스템 - 환경 변수 설정 예시
# 이 파일을 복사하여 .env 파일을 생성하고 실제 값으로 변경하세요

# ===========================================
# AI API 설정
# ===========================================

# Claude AI API 키 (Anthropic)
# https://console.anthropic.com/ 에서 발급
ANTHROPIC_API_KEY=your_claude_api_key_here

# ===========================================
# 보안 설정
# ===========================================

# JWT 토큰 서명용 비밀키 (랜덤 문자열)
JWT_SECRET_KEY=your_jwt_secret_key_change_this_to_random_string

# 데이터 암호화용 비밀번호
ENCRYPTION_PASSWORD=your_encryption_password_change_this

# ===========================================
# 지도 및 위치 API
# ===========================================

# 카카오 지도 API 키
# https://developers.kakao.com/ 에서 발급
KAKAO_API_KEY=your_kakao_api_key_here

# ===========================================
# 공공 데이터 API
# ===========================================

# 국토교통부 실거래가 API 키
# https://www.data.go.kr/ 에서 발급
MOLIT_API_KEY=your_molit_api_key_here

# 브이월드 API 키 (공간정보 오픈플랫폼)
# http://www.vworld.kr/ 에서 발급
VWORLD_API_KEY=your_vworld_api_key_here

# 공공데이터포털 API 키
# https://www.data.go.kr/ 에서 발급
DATA_GO_KR_KEY=your_data_go_kr_key_here

# ===========================================
# 데이터베이스 설정
# ===========================================

# 데이터베이스 파일 경로
DATABASE_PATH=land_ai.db

# 백업 디렉토리
BACKUP_DIR=backups

# ===========================================
# 애플리케이션 설정
# ===========================================

# 디버그 모드 (개발 시에만 True)
DEBUG=False

# 로그 레벨 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# 세션 타임아웃 (시간)
SESSION_TIMEOUT_HOURS=24

# API 호출 제한 (분당)
API_RATE_LIMIT_PER_MINUTE=60

# 최대 파일 업로드 크기 (MB)
MAX_FILE_SIZE_MB=10

# ===========================================
# Streamlit 설정
# ===========================================

# 서버 포트
STREAMLIT_SERVER_PORT=8501

# 헤드리스 모드 (서버 배포 시 True)
STREAMLIT_SERVER_HEADLESS=false

# CORS 설정
STREAMLIT_SERVER_ENABLE_CORS=true

# ===========================================
# 이메일 설정 (알림용, 선택사항)
# ===========================================

# SMTP 서버 설정
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# 관리자 이메일
ADMIN_EMAIL=admin@your-domain.com

# ===========================================
# 클라우드 스토리지 (선택사항)
# ===========================================

# AWS S3 설정
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=ap-northeast-2

# ===========================================
# 모니터링 및 분석 (선택사항)
# ===========================================

# Google Analytics
GA_TRACKING_ID=your_ga_tracking_id

# Sentry (에러 추적)
SENTRY_DSN=your_sentry_dsn